{
  "version": 2,
  "builds": [
    {
      "src": "main.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "public/**",
          "routes/**",
          "utils/**",
          "views/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "main.js"
    }
  ],
  "crons": [
    {
      "path": "/api/job",
      "schedule": "* 3 * * *"
    }
  ]
}
